prism:
  debug: false
  notify-newer-versions: false
  allow-metrics: false
  database:
    mode: mysql
    max-pool-connections: 20
    pool-initial-size: 10
    max-idle-connections: 10
    max-wait: 30000
    max-failures-before-wait: 5
    wait-on-failure-duration: 5
    actions-per-insert-batch: 1000
  mysql:
    hostname: 127.0.0.1
    username: prism
    password: <%= scope['secrets::prism_password'] %>
    database: prism_logs
    port: '3306'
  sqlite:
    enable-delete-limit: false
  wands:
    default-mode: hand
    default-item-mode-id: '280:0'
    default-block-mode-id: '17:1'
    auto-equip: true
    allow-user-override: true
    inspect:
      ignore-actions:
      - player-chat
      - player-command
      - player-join
      - player-quit
  queries:
    default-radius: 5
    default-time-since: 3d
    max-lookup-radius: 100
    max-applier-radius: 100
    never-use-defaults: false
    lookup-max-results: 1000
    default-results-per-page: 5
    lookup-auto-group: true
  messenger:
    always-show-extended: false
  near:
    default-radius: 5
    max-radius: 100
  drain:
    max-radius: 10
    default-radius: 5
  ex:
    max-radius: 100
    default-radius: 10
  ignore:
    players-in-creative: false
    players: []
    worlds: []
  db-records-purge-rules:
  - before:8w
  - a:water-flow before:4w
  purge:
    batch-tick-delay: 60
    records-per-batch: 5000
  appliers:
    allow-rollback-items-removed-from-container: true
    notify-nearby:
      enabled: true
      additional-radius: 20
    remove-fire-on-burn-rollback: true
    remove-drops-on-explode-rollback: true
    never-spawn-entity:
    - creeper
    never-place-block:
    - 10
    - 11
    - 46
    - 51
  tracking:
    block-break: true
    block-burn: true
    block-fade: true
    block-fall: true
    block-form: true
    block-place: true
    block-shift: true
    block-spread: true
    block-use: true
    bucket-fill: true
    bonemeal-use: true
    container-access: true
    cake-eat: true
    craft-item: false
    creeper-explode: true
    crop-trample: true
    dragon-eat: true
    enchant-item: true
    enderman-pickup: true
    enderman-place: true
    entity-break: true
    entity-dye: true
    entity-explode: true
    entity-follow: true
    entity-form: true
    entity-kill: true
    entity-leash: true
    entity-shear: true
    entity-spawn: true
    entity-unleash: true
    fireball: true
    fire-spread: false
    firework-launch: true
    hangingitem-break: true
    hangingitem-place: true
    item-drop: true
    item-insert: true
    item-pickup: true
    item-remove: true
    lava-break: true
    lava-bucket: true
    lava-flow: true
    lava-ignite: true
    leaf-decay: true
    lighter: true
    lightning: true
    mushroom-grow: true
    player-chat: false
    player-command: false
    player-death: true
    player-join: false
    player-kill: true
    player-quit: false
    player-teleport: true
    potion-splash: true
    sheep-eat: true
    sign-change: true
    spawnegg-use: true
    tnt-explode: true
    tnt-prime: true
    tree-grow: true
    vehicle-break: true
    vehicle-enter: true
    vehicle-exit: true
    vehicle-place: true
    water-break: true
    water-bucket: true
    water-flow: false
    world-edit: true
    xp-pickup: false
    api:
      enabled: true
      allowed-plugins: []
  track-player-ip-on-join: false
  track-hopper-item-events: false
  do-not-track:
    commands:
    - vanish
    - v
  alerts:
    alert-staff-to-applied-process: true
    ores:
      enabled: false
      log-to-console: false
      blocks:
        '21': '&9'
        '56': '&b'
        '15': '&7'
        '129': '&a'
        '14': '&6'
    illegal-commands:
      enabled: false
      log-to-console: false
      commands:
      - op
      - deop
      - stop
      - reload
    uses:
      enabled: true
      log-to-console: true
      lighter: true
      lava: true
      item-placement:
      - '7'
      - '29'
      - '46'
      - '10'
      - '11'
      item-break:
      - '20'
      - '102'
    vanilla-xray:
      enabled: false
  queue-empty-tick-delay: 3

